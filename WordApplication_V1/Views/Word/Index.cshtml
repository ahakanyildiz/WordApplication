@model List<Word>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>EN</td>
            <td>TR</td>
            <td>Image</td>
            <td>Update</td>
            <td>Delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>    
                <td>@item.Id</td>
                <td>@item.EnName</td>
                <td>@item.TrName</td>
                <td><image src="@item.ImageUrl" style="height:100px" /></td>
                <td><a href="/word/update/@item.Id" class="btn btn-outline-info">Update</a></td>
                <td><a href="/word/delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Word/AddWord" class="btn btn-primary">Yeni Kelime Ekle</a>




